{
  "name": "@geanatz/cortex-mcp",
  "version": "5.0.0",
  "description": "An MCP server for task-based orchestration workflows with phase artifacts for agentic development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cortex-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "task-management",
    "orchestration",
    "agentic-workflow",
    "file-storage",
    "productivity",
    "ai-tools",
    "opencode"
  ],
  "author": "Geanatz",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geanatz/cortex-mcp.git"
  },
  "files": [
    "dist/**/*",
    "!dist/.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
